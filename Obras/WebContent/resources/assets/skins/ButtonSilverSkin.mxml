<?xml version="1.0" encoding="utf-8"?>
<s:SparkSkin minHeight="21" minWidth="21"
	xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5">

	<fx:Script>
		<![CDATA[
			import spark.components.Button;


			protected override function updateDisplayList(unscaledWidth:Number, unscaledHeight:Number):void
			{
				super.updateDisplayList(unscaledWidth, unscaledHeight);
				Button(hostComponent).buttonMode = true;
			}
		]]>
	</fx:Script>

	<!-- host component -->
	<fx:Metadata>[HostComponent("spark.components.Button")]</fx:Metadata>

	<!-- states -->
	<s:states>
		<s:State name="up"/>
		<s:State name="over"/>
		<s:State name="down"/>
		<s:State name="disabled"/>
		<fx:Script>
			<![CDATA[
				import br.com.cestari.assets.Assets;
			]]>
		</fx:Script>
	</s:states>

	<!--<s:RectangularDropShadow id="dropShadow" blurX="10" blurY="10" alpha="0.45" distance="2" 
							 angle="90" color="#000000" width="100%" height="100%"
							 brRadius="5" blRadius="5" tlRadius="5" trRadius="5"/>-->
	<s:BitmapImage height="100%" source="{Assets.BUTTON_UP}" source.down="{Assets.BUTTON_DOWN}"
		source.over="{Assets.BUTTON_OVER}" width="100%">
		<s:filters>
			<s:DropShadowFilter alpha=".3" color="0x000000" distance="3" angle="70"/>
		</s:filters>
	</s:BitmapImage>
	<s:Label id="labelDisplay" bottom="2" color="#333333" fontSize="12" fontWeight="bold"
		horizontalCenter="0" left="10" right="10" textAlign="center" top="2" verticalAlign="middle"
		verticalCenter="1"
		maxDisplayedLines="1">
		<s:filters>
			<s:DropShadowFilter color="#FFFFFF"
								distance="1" angle="90" alpha="0.76"/>
		</s:filters>
	</s:Label>
</s:SparkSkin>
