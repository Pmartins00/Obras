<!--- The default skin class for Spark TextArea component.  

     @see spark.components.TextArea
        
      @langversion 3.0
      @playerversion Flash 10
      @playerversion AIR 1.5
      @productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
    xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabled="0.5" blendMode="normal">
    <fx:Metadata>[HostComponent("br.com.cestari.components.controls.PromptingTextArea")]</fx:Metadata>

	<fx:Script>
		<![CDATA[
			import br.com.cestari.assets.Assets;
		]]>
	</fx:Script>
    <s:states>
        <s:State name="normal"/>
		<s:State name="prompting"/>
        <s:State name="disabled"/>
    </s:states>
    

	<s:BitmapImage smooth="true" source="{Assets.FUNDO_TEXT_INPUT}" width="100%" height="100%"/>
	
	<!-- prompt -->
	<s:Label id="promptDisplay" left="4" right="24" top="6" bottom="0" includeIn="prompting"
			 color="#aaaaaa" fontStyle="italic"
			 maxDisplayedLines="1"
			 verticalAlign="top" />
    <!--- Defines the scroller that is used to scroll the TextArea control. -->
    <s:Scroller id="scroller" left="4" top="4" right="0" bottom="0" minViewportInset="1" measuredSizeIncludesScrollBars="false" hasFocusableChildren="false">
        <!--- @copy spark.components.supportClasses.SkinnableTextBase#textDisplay -->
        <s:RichEditableText
					left="4" top="1"
					id="textDisplay"
                	 heightInLines="10"
                  	widthInChars="15" />
    </s:Scroller>
	

</s:SparkSkin>
