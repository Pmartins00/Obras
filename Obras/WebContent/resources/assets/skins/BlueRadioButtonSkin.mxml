<!--- The default skin class for a Spark RadioButton component.

	 @see spark.components.RadioButton
	 @see spark.components.RadioButtonGroup

	 @langversion 3.0
	 @playerversion Flash 10
	 @playerversion AIR 1.5
	 @productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009" xmlns:s="library://ns.adobe.com/flex/spark"
	xmlns:fb="http://ns.adobe.com/flashbuilder/2009" alpha.disabledStates="0.5" buttonMode="true"
	useHandCursor="true">

	<fx:Metadata>
		<![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.RadioButton")]
    ]]>
	</fx:Metadata>

	<fx:Script>
		<![CDATA[
			/**
			 * @private
			 */
			private static const focusExclusions:Array = ["labelDisplay"];

			/**
			 *  @private
			 */
			override public function get focusSkinExclusions():Array
			{
				return focusExclusions;
			}
			;
		]]>
	</fx:Script>

	<s:states>
		<s:State name="up"/>
		<s:State name="over" stateGroups="overStates"/>
		<s:State name="down" stateGroups="downStates"/>
		<s:State name="disabled" stateGroups="disabledStates"/>
		<s:State name="upAndSelected" stateGroups="selectedStates"/>
		<s:State name="overAndSelected" stateGroups="overStates, selectedStates"/>
		<s:State name="downAndSelected" stateGroups="downStates, selectedStates"/>
		<s:State name="disabledAndSelected" stateGroups="disabledStates, selectedStates"/>
	</s:states>

	<s:Group>
		<s:layout>
			<s:HorizontalLayout verticalAlign="middle"/>
		</s:layout>
		<s:Group verticalCenter="0"
			buttonMode="true" useHandCursor="true">
			<s:BitmapImage source="@Embed('../images/radioButton/Image_1.png')"
				x="0" y="0"
				blendMode="normal" smooth="true"/>
			<s:BitmapImage id="bitmapimage1"
				source="@Embed('../images/radioButton/Image_2.png')" x="5" y="5"
				blendMode="normal" smooth="true"
				includeIn="disabledAndSelected,downAndSelected,over,overAndSelected,upAndSelected"
				visible.over="false"/>
		</s:Group>

		<s:Label id="labelDisplay" bottom="3" color="#4E92B1" left="18" right="0" textAlign="start"
			top="3" verticalAlign="middle" verticalCenter="2"
			buttonMode="true" useHandCursor="true" maxDisplayedLines="1">
			<s:filters>
				<s:DropShadowFilter color="#FFFFFF"
					blurX="1" blurY="1" distance="1" strength="1" alpha="0.5" angle="45.0"/>
			</s:filters>
		</s:Label>
	</s:Group>

</s:SparkSkin>
