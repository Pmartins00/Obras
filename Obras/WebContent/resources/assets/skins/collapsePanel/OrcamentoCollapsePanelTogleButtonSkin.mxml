<!--- The default skin class for a Spark ToggleButton component.

	 @see spark.components.ToggleButton

	 @langversion 3.0
	 @playerversion Flash 10
	 @playerversion AIR 1.5
	 @productversion Flex 4
-->
<s:SparkSkin xmlns:fx="http://ns.adobe.com/mxml/2009"
			 xmlns:s="library://ns.adobe.com/flex/spark"
			 xmlns:fb="http://ns.adobe.com/flashbuilder/2009"
			 minWidth="21"
			 minHeight="21"
			 alpha.disabledStates="0.5">

	<!-- host component -->
	<fx:Metadata>
		<![CDATA[ 
        /** 
         * @copy spark.skins.spark.ApplicationSkin#hostComponent
         */
        [HostComponent("spark.components.ToggleButton")]
    ]]>
	</fx:Metadata>

	<!-- states -->
	<s:states>
		<s:State name="up"/>
		<s:State name="over"
				 stateGroups="overStates"/>
		<s:State name="down"
				 stateGroups="downStates"/>
		<s:State name="disabled"
				 stateGroups="disabledStates"/>
		<s:State name="upAndSelected"
				 stateGroups="selectedStates, selectedUpStates"/>
		<s:State name="overAndSelected"
				 stateGroups="overStates, selectedStates"/>
		<s:State name="downAndSelected"
				 stateGroups="downStates, selectedStates"/>
		<s:State name="disabledAndSelected"
				 stateGroups="selectedUpStates, disabledStates, selectedStates"/>
	</s:states>

	<s:BitmapImage blendMode="normal"
				   smooth="true"
				   source="@Embed('../../images/accordion/Image_0.png')"
				   x="0"
				   y="0"
				   id="bitmapimage3"
				   includeIn="downStates, selectedUpStates, overAndSelected"/>
	<s:BitmapImage blendMode="normal"
				   smooth="true"
				   source="@Embed('../../images/accordion/Image_1.png')"
				   x="0"
				   y="0"
				   id="bitmapimage1"
				   includeIn="up"/>
	<s:BitmapImage blendMode="normal"
				   smooth="true"
				   source="@Embed('../../images/accordion/Image_2.png')"
				   x="0"
				   y="0"
				   id="bitmapimage2"
				   includeIn="over"/>
	<s:RichText alpha="1"
				blendMode="normal"
				kerning="off"
				whiteSpaceCollapse="preserve"
				x="157"
				y="15"
				id="labelDisplay1"
				text="Clique aqui para visualizar os detalhes dos históricos de revisões desse Orçamento"
				color="#DDDDDD"
				tabStops="S0 S50 S100 S150 S200 S250 S300 S350 S400"
				color.disabled="#666666"
				fontWeight="bold">
		<s:filters>
			<s:DropShadowFilter blurX="0"
								blurY="0"
								hideObject="false"
								inner="false"
								color="0x000000"
								strength="0"
								alpha="1"
								quality="2"
								knockout="false"
								angle="90"
								distance="1"
								includeIn="down,over,up"/>
		</s:filters>
	</s:RichText>
	<s:RichText alpha="1"
				blendMode="normal"
				kerning="off"
				whiteSpaceCollapse="preserve"
				x="18"
				y="15"
				id="labelDisplay"
				text="REVISÕES"
				color="#DDDDDD"
				tabStops="S0 S50"
				color.disabled="#666666"
				fontWeight="bold"
				color.up="#DDDDDD"
				fontSize.up="12"
				kerning.up="off"
				text.up="REVISÕES">
		<s:filters>
			<s:DropShadowFilter blurX="0"
								blurY="0"
								hideObject="false"
								inner="false"
								color="0x000000"
								strength="0"
								alpha="1"
								quality="2"
								knockout="false"
								angle="90"
								distance="1"
								includeIn="down,over,up"/>
		</s:filters>
	</s:RichText>
	<s:transitions>
		<s:Transition fromState="disabled"
					  toState="up"
					  autoReverse="true">
			<s:Parallel>
				<s:Parallel target="{bitmapimage3}">
					<s:Fade duration="0"/>
				</s:Parallel>
				<s:Parallel target="{bitmapimage2}">
					<s:Fade duration="0"/>
				</s:Parallel>
			</s:Parallel>
		</s:Transition>
		<s:Transition fromState="up"
					  toState="over"
					  autoReverse="true">
			<s:Parallel>
				<s:Parallel target="{bitmapimage1}">
					<s:Fade duration="0"/>
				</s:Parallel>
				<s:Parallel target="{bitmapimage2}">
					<s:Fade duration="0"/>
				</s:Parallel>
			</s:Parallel>
		</s:Transition>
	</s:transitions>

</s:SparkSkin>
